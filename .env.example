# ================================
# Environment Variables for Docker Compose
# ================================

# Copy this file to .env and update with your values
# cp .env.example .env

# ================================
# Spring Boot Configuration
# ================================
SPRING_PROFILE=prod

# ================================
# Database Configuration
# ================================
DB_NAME=ecommerce_db
DB_USERNAME=ecommerce
DB_PASSWORD=your-secure-password-here

# ================================
# Redis Configuration
# ================================
REDIS_PASSWORD=

# ================================
# MinIO Configuration
# ================================
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=ecommerce-images

# ================================
# JWT Configuration
# ================================
# IMPORTANT: Change this in production! Must be at least 256 bits (32 characters)
JWT_SECRET=your-secret-key-change-this-in-production-min-256-bits-please-make-it-very-long-and-random

# ================================
# OAuth2 (Optional - for Google Login)
# ================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ================================
# Database Seeding
# ================================
# Enable automatic database seeding on startup
SEED_ENABLED=true

# Force re-seed even if data exists (WARNING: destroys existing data!)
FORCE_RESEED=false

# Create test users (admin@example.com, seller@example.com, etc.)
# Set to false in production!
TEST_USERS=true
